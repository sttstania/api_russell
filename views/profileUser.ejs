<!-- User profile view -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Profil</title>
    </head>
    <body>
        <%- include('partials/header') %>
        <main>
            <h1>Profil de <%= user.name %></h1>
            <p><strong>Nom:</strong> <%= user.name %></p>
            <p><strong>Email:</strong> <%= user.email %></p>
            <p>Créé le : <%= user.createdAt.toLocaleString() %></p>
            <p>Mis à jour le : <%= user.updatedAt.toLocaleString() %></p>
            <a href="/users/<%= user._id %>/edit">Éditer mon profil</a>
        </main>
        <%- include('partials/footer') %>
    </body>
</html>
